<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ResultActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            android:textSize="21sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@color/midnight_blue"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/midnight_blue"
            android:padding="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/lime"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/image"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/speak"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/speak"
            tools:layout_editor_absoluteX="0dp"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:textColor="#ff0000"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/sciname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert" />


        <TextView
            android:id="@+id/scidet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"

            android:textAlignment="center"
            android:textColor="#000CF4"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/speak2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/sciname"
            app:layout_constraintTop_toBottomOf="@+id/alert" />

        <Button
            android:id="@+id/speak2"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/alert" />

        <TextView
            android:id="@+id/cst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sciname" />

        <TextView
            android:id="@+id/cstdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"

            android:textAlignment="center"
            android:textColor="#000CF4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scidet" />


        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cstdet"
            tools:layout_editor_absoluteX="16dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/descdet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            tools:layout_editor_absoluteX="16dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="#000CF4" />



        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/descdet"
            tools:layout_editor_absoluteX="16dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp" />

        <Button
            android:id="@+id/morebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/more"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:text="Learn More"
            android:textColor="@color/midnight_blue"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="779dp"
            app:layout_constraintTop_toBottomOf="@+id/morebtn"
            android:layout_marginTop="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

