<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.animalclassifierv3.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#393742">

<!--        <TextView-->
<!--            android:id="@+id/hudai1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="30dp"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->
<!--        app:layout_constraintTop_toBottomOf="@id/hudai1"-->

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_layout"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Classify Animals From Images"
                android:textAlignment="viewStart"
                android:textColor="@color/lime"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/main_capture_photo"
                android:textAlignment="viewStart"
                android:textColor="#fff"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/camerabtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_btn_1"
                    android:focusable="true"
                    android:paddingStart="25dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="15dp"
                    android:text="Take a photo"
                    android:textAllCaps="false"
                    android:textColor="@color/midnight_blue"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/gallerybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_btn_1"
                    android:focusable="true"
                    android:paddingStart="25dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="15dp"
                    android:text="Open Gallery"
                    android:textAllCaps="false"
                    android:textColor="@color/midnight_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>
        <TextView
            android:id="@+id/hudai2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/top" />

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hudai2"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="Learn About Animals"
                android:textStyle="bold"
                android:textColor="@color/lime"
                android:padding="10dp"
                android:textAlignment="viewStart"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textAlignment="viewStart"
                android:text="@string/main_encyclo"
                android:padding="10dp"
                android:textColor="#fff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_gravity="center" >


                <Button
                    android:id="@+id/encyclobtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encyclopedia"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:textColor="@color/midnight_blue"
                    android:textSize="17sp"
                    android:focusable="true"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_btn_1"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/hudai3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/middle" />

        <LinearLayout
            android:id="@+id/middle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hudai3"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="Exclusive Online Features"
                android:textStyle="bold"
                android:textColor="@color/lime"
                android:padding="10dp"
                android:textAlignment="viewStart"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textAlignment="viewStart"
                android:text="@string/main_online_feature"
                android:padding="10dp"
                android:textColor="#fff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_gravity="center" >


                <Button
                    android:id="@+id/features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:textColor="@color/midnight_blue"
                    android:textSize="17sp"
                    android:focusable="true"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_btn_1"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>

        <Button
            android:id="@+id/aboutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle2"
            android:text="About App"
            android:textColor="@color/midnight_blue"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutbtn" />


