<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EncyclopediaActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="#BDF0F6"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            tools:layout_editor_absoluteX="0dp" />

        <!--        <Button-->
        <!--            android:id="@+id/nofunc"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/spin"-->
        <!--            android:visibility="invisible"/>-->

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:background="@color/midnight_blue"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/lime"
            android:textSize="25sp"

            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spin" />


        <Button
            android:id="@+id/speak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <TextView
            android:id="@+id/sciname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"

            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/scidet"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speak" />

        <TextView
            android:id="@+id/scidet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textAlignment="viewEnd"
            android:textColor="#000CF4"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/speak2"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintTop_toBottomOf="@+id/speak" />

        <Button
            android:id="@+id/speak2"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/speak" />

        <LinearLayout
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/scidet"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/cst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <TextView
            android:id="@+id/cstdet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:padding="5dp"
            android:textAlignment="viewEnd"
            android:textColor="#000CF4"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/speak3"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <Button
            android:id="@+id/speak3"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <TextView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cst" />

        <TextView
            android:id="@+id/alertdet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textAlignment="viewEnd"
            android:textColor="#000CF4"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/speak4"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintTop_toBottomOf="@+id/cstdet" />

        <Button
            android:id="@+id/speak4"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speak3" />

        <TextView
            android:id="@+id/alertdet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="5dp"
            android:textAlignment="center"

            android:textColor="#ff0000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/alertdet2"
            tools:layout_editor_absoluteX="16dp"

            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp" />

        <Button
            android:id="@+id/speak5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc" />

        <TextView
            android:id="@+id/descdet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/speak5"
            tools:layout_editor_absoluteX="16dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="#000CF4" />



        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/descdet"
            tools:layout_editor_absoluteX="16dp"

            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp" />

        <Button
            android:id="@+id/photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_1"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Photos"
            android:textAllCaps="false"
            android:textColor="@color/midnight_blue"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/more" />

        <Button
            android:id="@+id/links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toEndOf="@+id/photos"
            app:layout_constraintTop_toBottomOf="@+id/more"
            android:text="Links"
            android:textColor="@color/midnight_blue"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn_1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/photos"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

